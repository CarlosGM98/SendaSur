<!DOCTYPE HTML>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>SendaSur - Rutas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" href="/imagenes/favicon.png" type="image/png">
  <style>
    body {
      background-image: url("/Imagenes/2T.jpg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-attachment: fixed; /* Hace que el fondo permanezca fijo */
      margin: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh; /* Esto asegura que el body ocupe al menos toda la altura de la ventana */
    }
    .ruta-card {
      background-color: rgba(255, 255, 255, 0.8);
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 20px;
      text-align: center;
      transition: transform 0.2s;
    }
    .ruta-card:hover {
      transform: scale(1.02);
    }
    h5 {
      color: green;
      font-weight: bold;
    }
    .content {
      flex: 1;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
      <a href="/inicio"><img src="/Imagenes/favicon.png" class="mx-4 img-fluid" alt="Logo" style="height: 40px;"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/inicio">Inicio</a></li>
          <li class="nav-item"><a class="nav-link active" href="/rutas">Rutas</a></li>
          <li class="nav-item"><a class="nav-link" href="/mis-rutas">Mis Rutas</a></li>
          <li class="nav-item"><a class="nav-link" href="/mis-comentarios">Mis comentarios</a></li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if (usuario) { %>
            <li class="nav-item"><span class="nav-link">Hola, <strong><%= usuario.nombreUsuario %></strong></span></li>
            <li class="nav-item"><a class="nav-link btn btn-danger text-white" href="/logout">Logout</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="content">
    <div class="container mt-5 mb-5">
      <div class="text-center mb-4">
        <a href="/crear-ruta" class="btn btn-primary btn-lg">+ Crear nueva ruta</a>
      </div>

      <div class="row">
        <% if (rutas && rutas.length > 0) { %>
          <% rutas.forEach(ruta => { %>
            <div class="col-xs-12 col-md-6 col-lg-4">
              <a href="/rutas/<%= ruta.idRuta %>" class="text-decoration-none text-dark">
                <div class="ruta-card shadow">
                  <img src="<%= ruta.imagenRuta ? ruta.imagenRuta : '/Imagenes/AltSinImagen.PNG' %>" 
                       alt="Imagen de <%= ruta.nombreRuta %>" 
                       class="img-fluid mb-2" 
                       style="max-height: 200px;">
                  <h5><%= ruta.nombreRuta %></h5>
                </div>
              </a>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12">
            <p class="text-center text-white">No hay rutas registradas aún.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-light py-4 mt-auto">
    <div class="container text-center">
      <p class="mb-2">Página web creada por Carlos Miguel García Morillo</p>
      <a href="/inicio" class="btn btn-primary">Volver al Inicio</a>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
